{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "paths": {
            "@constants": ["constants"],
            "@features": ["features"],
            "@ui": ["ui"],
            "@core": ["core"],
            "@pages": ["pages"],
            "@types": ["types"],
            "@utils": ["utils"]
        }
    },
    "include": ["src/**/*"]
}
